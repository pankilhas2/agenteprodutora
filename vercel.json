{
  "version": 2,
  "buildCommand": "pnpm install && prisma generate && pnpm run build",
  "framework": "nextjs",
  "build": {
    "env": {
      "NEXT_PUBLIC_SUPABASE_URL": "@next_public_supabase_url",
      "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@next_public_supabase_anon_key",
      "NEXT_PUBLIC_GEMINI_API_KEY": "@next_public_gemini_api_key",
      "NEXT_PUBLIC_EMAILJS_SERVICE_ID": "@next_public_emailjs_service_id",
      "NEXT_PUBLIC_EMAILJS_TEMPLATE_ID": "@next_public_emailjs_template_id",
      "NEXT_PUBLIC_EMAILJS_USER_ID": "@next_public_emailjs_user_id",
      "MERCADO_PAGO_ACCESS_TOKEN": "@mercado_pago_access_token",
      "MERCADO_PAGO_PUBLIC_KEY": "@mercado_pago_public_key",
      "MERCADO_PAGO_CLIENT_ID": "@mercado_pago_client_id",
      "MERCADO_PAGO_CLIENT_SECRET": "@mercado_pago_client_secret",
      "GOOGLE_TTS_API_KEY": "@google_tts_api_key",
      "GROQ_API_KEY": "@groq_api_key"
    }
  }
}



